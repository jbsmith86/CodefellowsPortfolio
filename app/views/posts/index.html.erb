<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr id="<%= dom_id(post) %>">
      <td><%= post.title %></td>
      <td><%= markdown(post.body) %></td>
      <td><%= link_to 'Show', post %></td>
      <td><% if policy(post).update? %>
            <%= link_to 'Edit', edit_post_path(post) %>
          <% end %></td>
      <td><% if policy(post).destroy? %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'New Post', new_post_path, class: "button small alert radius" %>
<% end %>
